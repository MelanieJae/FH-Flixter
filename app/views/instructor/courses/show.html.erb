<script>
	$(function() {
		$('.lessons').sortable({
			update: function( event, ui ) {
				$.ajax({
					type: 'PUT',
					url: ui.item.data('update-url'),
					dataType: 'json',
					data: { lesson: { row_order_position: ui.item.index() } }

				});
			}
		});
	});
</script>
<br />
<div class="frosty col-xs-10 col-xs-offset-1">
	<h1 class="text-center"><%= current_course.title %></h1>
	<br />
	
	<%= link_to 'Preview as Student', course_path(current_course), :class => 'btn btn-warning pull-right' %>
	<div class="text-center">
		<%= link_to 'Add a new section', new_instructor_course_section_path(current_course), :class => "btn btn-warning pull-right" %>

	</div>
	
	


	<div class="row">
	  <div class="col-xs-4 col-md-3">
	    <a href="#" class="thumbnail">
	     <%= image_tag current_course.image %>
	    </a>
	  </div>
	</div> 
		
	<ul>
		<% current_course.sections.each do |section| %>
			<li>
				<span class="glyphicon glyphicon-list"></span>
				<%= section.title %>
				<%= link_to 'Add a new lesson', new_instructor_section_lesson_path(current_course), :class => 'pull-right btn btn-warning pull-right' %><br class="clr" />
				<br class="clr" />
					
			</li>
     	<ul class="lessons">
			<% section.lessons.rank(:row_order).each do |lesson| %>
				<li data-update-url="<%= instructor_lesson_path(lesson) %>">
					<div class="col-xs-1">
						<br />	
						<span class="glyphicon glyphicon-list"></span>
					</div>
					<div class="col-xs-11">
						<p>
							<b><%= lesson.title %></b>
						</p>
						<p>			
							<%= lesson.subtitle %>
						</p>
					</div>
					<br class="clr" />
				</li>
			<% end %>
		</ul>
		<br class="clr" />
		<% end %>

		
			
		
	</ul>
 </div>    



	