<br />
<div class="frosty col-xs-10 col-xs-offset-1">
	<h1 class="text-center"><%= @course.title %></h1>
	<br />
	
	<%= link_to 'Preview as Student', course_path(@course), :class => 'btn btn-warning pull-right' %>
	<div class="text-center">
		<%= link_to 'Add a new section', new_instructor_course_section_path(@current_course), :class => "btn btn-warning pull-right" %>
	</div>
	
	<%= simple_form_for @image, :url => instructor_course_images_path(@current_course) do |f| %>
            <div class="main-box">
            	<h1>Upload image here</h1>
              <%= f.input :caption %>	
              <%= f.input :image %> 
            </div>
        <div class="footer">
          <button type="button" class="btn btn-default">Close</button>
          <%= f.submit "Upload image", :class => 'btn btn-default' %>
        </div>        
     <% end %>

	<ul>
		<% @current_course.sections.each do |section| %>
			<li>
				<%= section.title %>
			</li>
     	<ul>
			<% section.lessons.each do |lesson| %>
				<li>
					<b><%= lesson.title %></b>
							-
					<%= lesson.subtitle %>
				</li>
			<% end %>
		</ul>

		<% @current_course.images.each do |image| %>
			<%= image_tag @current_course.image %>
		<% end %>

		<br class="clr" />
			
		<% end %>
	</ul>
     

</div>

	