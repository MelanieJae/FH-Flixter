<br />
<div class="course-box col-xs-10 col-xs-offset-1">
	<h1>Add a new course</h1>
	<%= simple_form_for @course, :url => instructor_courses_path do |f| %>
	    <%= f.input :title %>
	    <%= f.input :description %>
	    <%= f.input :cost %>
    	<%= f.submit "Create", :class => 'btn btn-primary' %>
    	<br />

	<%= simple_form_for @image, :url => instructor_course_images_path(current_course) do |f| %>
            <div class="main-box">
            	<h1>Upload image here</h1>
              <%= f.input :caption %>	
              <%= f.input :image %> 
            </div>
        <div class="footer">
          <button type="button" class="btn btn-default">Close</button>
          <%= f.submit "Upload image", :class => 'btn btn-default' %>
        </div>        
     <% end %>

   	<% end %>
  	<br />
</div>